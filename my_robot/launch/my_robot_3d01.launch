<?xml version="1.0" encoding="UTF-8"?>
<launch>
  <arg name="model" default="$(find my_robot)/xacro/my_robot_3d01.xacro"/>   
  <param name="robot_description" command="$(find xacro)/xacro $(arg model) --inorder"/>

  <include file="$(find gazebo_ros)/launch/empty_world.launch"/>

  <node name="spawn_urdf" pkg="gazebo_ros" type="spawn_model" args="-param robot_description -urdf -model my_robot" />

  <rosparam>
    my_robot:      
      arm1_joint_effort_controller:
        type: effort_controllers/JointEffortController
        joint: arm1_joint
        
  </rosparam>
  <rosparam>
    my_robot:      
      arm2_pitch_joint_effort_controller:
        type: effort_controllers/JointEffortController
        joint: arm2_pitch_joint

  </rosparam>
  <rosparam>
    my_robot:
      joint_state_controller:
        type: joint_state_controller/JointStateController
        publish_rate: 100
  </rosparam>
  <node name="controller_spawner" pkg="controller_manager"
        type="spawner" respawn="false"
        output="screen" ns="/my_robot"
        args="arm1_joint_effort_controller arm2_pitch_joint_effort_controller joint_state_controller"/>

  <node name="robot_state_publisher" pkg="robot_state_publisher" 
        type="robot_state_publisher" respawn="false" 
        output="screen">
    <remap from="/joint_states" to="/my_robot/joint_states" />
  </node>  
</launch>
